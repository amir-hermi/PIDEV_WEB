{% extends 'base.html.twig' %}

{% block title %}New Utilisateur{% endblock %}
{% block variabls1 %}{% endblock %}
{% block ShowLogin %} {% endblock %}
{% block banner %}

    <!-- banner -->
    <div class="banner10" id="home1">
        <div class="container">
            <h2>Inscription</h2>
        </div>
    </div>
    <!-- //banner -->

    <!-- breadcrumbs -->
    <div class="breadcrumb_dress">
        <div class="container">
            <ul>
                <li><a href="{{ path('home') }}"><span class="glyphicon glyphicon-home" aria-hidden="true"></span> Home</a> <i>/</i></li>
                <li>Panier</li>
            </ul>
        </div>
    </div>
    <!-- //breadcrumbs -->
{% endblock %}

{% block body %}
<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                &times;</button>
            <h4 class="modal-title" id="myModalLabel">
                Don't Wait, Login now!</h4>
        </div>
        <div class="modal-body modal-body-sub">
            <div class="row">
                <div class="col-md-8 modal_body_left modal_body_left1" style="border-right: 1px dotted #C2C2C2;padding-right:3em;">
                    <div class="sap_tabs">
                        <div id="horizontalTab" style="display: block; width: 100%; margin: 0px;">
                            <ul>
                                <li class="resp-tab-item" aria-controls="tab_item-0"><span>Sign in</span></li>
                                <li class="resp-tab-item" aria-controls="tab_item-1"><a href="{{ path('app_login') }}"><span>Sign up</span></a> </li>
                            </ul>


                                <div class="facts">
                                    <div class="register">
                                        {{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}
                                        {# utilisation de classes bootstrap pour la mise en forme #}
                                        <div class="row">
                                            <div class="col-12">
                                                {{ form_row(form.username, {  'attr':{'placeholder': 'Nom d\'utilisateur'}}) }}
                                                {{ form_widget(form.username) }}
                                            </div>
                                            <div class="col-12">
                                                {{ form_row(form.lastname, {  'attr':{'placeholder': 'Prenom d\'utilisateur'}}) }}
                                                {{ form_widget(form.lastname) }}
                                            </div>
                                            <div class="col-12">
                                                {{ form_row(form.email, {  'attr':{'placeholder': 'Adresse email ... '}}) }}
                                                {{ form_widget(form.email) }}
                                            </div>
                                            <div class="col-12">
                                                {{ form_row(form.tel, {  'attr':{'placeholder': 'Num telephpone ... '}}) }}
                                                {{ form_widget(form.tel) }}
                                            </div>
                                            <div class="col-12">
                                                {{ form_row(form.password, {  'attr':{'placeholder': 'Mot de passe ... '}}) }}
                                                {{ form_widget(form.password) }}
                                            </div>
                                            <div class="col-12">
                                                {{ form_row(form.confirm_password, {  'attr':{'placeholder': 'Répéter votre mot de passe'}}) }}
                                                {{ form_widget(form.confirm_password) }}
                                            </div>
                                            <div class="col-12">
                                                {{ form_row(form.image) }}
                                                {{ form_widget(form.image) }}
                                            </div>
                                            <div class="col-12">
                                                {{ form_row(form.captcha, {  'attr':{'placeholder': 'Répéter votre mot de passe'}}) }}
                                                {{ form_widget(form.captcha) }}
                                            </div>

                                        </div>
                                        <button class="btn btn-success">{{ button_label|default('') }}</button>




                                        <input type="submit" value="Create Account"/>
                                        {{ form_end(form) }}
                                    </div>
                                </div>

                        </div>
                    </div>
                    <script src="js/easyResponsiveTabs.js" type="text/javascript"></script>
                    <script type="text/javascript">
                        $(document).ready(function () {
                            $('#horizontalTab').easyResponsiveTabs({
                                type: 'default', //Types: default, vertical, accordion
                                width: 'auto', //auto or any width like 600px
                                fit: true   // 100% fit in a container
                            });
                        });
                    </script>
                    <div id="OR" class="hidden-xs">
                        OR</div>
                </div>
                <div class="col-md-4 modal_body_right modal_body_right1">
                    <div class="row text-center sign-with">
                        <div class="col-md-12">
                            <h3 class="other-nw">
                                Sign in with</h3>
                        </div>
                        <div class="col-md-12">
                            <ul class="social">
                                <li class="social_facebook"><a href="#" class="entypo-facebook"></a></li>
                                <li class="social_dribbble"><a href="#" class="entypo-dribbble"></a></li>
                                <li class="social_twitter"><a href="#" class="entypo-twitter"></a></li>
                                <li class="social_behance"><a href="#" class="entypo-behance"></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}




